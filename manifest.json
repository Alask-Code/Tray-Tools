{
  "appName": "Tray Tools",
  "version": "1.1.0",
  "featureFlags": {
    "showLogs": true,
    "BrowserWindow": {
      "enabled": true,
      "options": {
        "frame": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "webPreferences": {
          "nodeIntegration": true,
          "contextIsolation": false,
          "enableRemoteModule": true
        }
      }
    }
  },
  "apps": [
    {
      "name": "Settings",
      "pathToApp": "./apps/settings/index.html",
      "icon": "./src/assets/settings.png",
      "useWidgetScreen": false
    },
    {
      "comment": "When useWidgetScreen is true the icon will be replaced with the widgetScreen.html",
      "name": "Launcher",
      "pathToApp": "./apps/launcher/index.html",
      "icon": "./src/assets/laucher.png",
      "useWidgetScreen": true
    }
  ]
}